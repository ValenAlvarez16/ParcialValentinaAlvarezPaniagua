@model TicketingSystem.DAL.Entities.Ticket

<h2>Validate Ticket</h2>

<div>
    <h4>Ticket Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Ticket ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>


        <dt class="col-sm-2">Is Used?</dt>
        <dd class="col-sm-10">@Model.IsUsed</dd>

        <dt class="col-sm-2">Use Date</dt>
        <dd class="col-sm-10">@Model.UseDate</dd>

        <dt class="col-sm-2">Entrance Gate</dt>
        <dd class="col-sm-10">@Model.EntranceGate</dd>

        <dt class="col-sm-2">Entrance Gate</dt>
        <dd class="col-sm-10">@Model.CreatedDate</dd>

        <dt class="col-sm-2">Entrance Gate</dt>
        <dd class="col-sm-10">@Model.CreatedDate</dd>
    </dl>
</div>

<div class="text-center">
    @using (Html.BeginForm("Validate", "Tickets", FormMethod.Post))
    {
        @Html.Hidden("id", Model.Id)
        <button type="submit" class="btn btn-primary">Validate</button>
    }
</div>


